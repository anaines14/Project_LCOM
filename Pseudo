int draw(x, y, Bitmap){
	pinta Bitmap nas coordenadas x y;
}

int draw_Background(){
	for(){
		draw(x, y Tile);
	}
}

int draw_Player(){
	draw(x, y Player);
}

int clean_Screen(posição para limpar){
	desenha background;
}

int draw_Enemy(x, y, posição anterior){
	draw(x,y, Enemy);
}

int move(Enimigo){
	int draw_Enemy(x, y, posição anterior);
	int clean_Screen(posição para limpar);
}

int interrupts(){

	while(true){
		
		interrupt timer:
			timer_int_handler();
			if (checkColission(Enemy, Player))
				break; //Game Over
			random: spawnEnemy()
			move(Enimigo);
		
		interrupt teclado:
			missile = change_Missile();
		
		interrupt keyboard:
			shoot();
			move(Missile);
			if(checkColision(Missile, Enemy))
				destroy(Enemy);
			destroy(Missile);
			
	}
}

int main(){
	draw_Background();
	draw_Player();
	startMusic()?????
	interrupts();
	gameOver();
}